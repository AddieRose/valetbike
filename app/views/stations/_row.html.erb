<div class="record-row <%= cycle "odd", "even", name: "row-cycler" %> flexbox vertical stretch">
  <% if station.docked_bikes.count == 1 %>
    <%= station.id %>: <%= station.name %> (<%= station.address %>) -- <%= station.docked_bikes.count %> bike
  <% else %>
    <%= station.id %>: <%= station.name %> (<%= station.address %>) -- <%= station.docked_bikes.count %> bikes
  <% end %>
</div>