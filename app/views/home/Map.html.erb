<style>
  .parent {
    position: relative;
    top: 0;
    left: 0;
    vertical-align: middle;
    text-align:right;
  }

  .map {
    position: relative;
    width: 75%;
    height: 75%;
  }

  .pin {
    position: absolute;
    top: 45%;
    left: 52.5%;
    width: 2%;
    height 10%;
  }

  .pin2 {
    position: absolute;
    top: 36%;
    left: 42%;
    width: 2%;
    height 10%;
  }

  .stationscol {
    margin-right: 78%;
    text-align: center;
    margin-left: 1%;
  }

  .stationslist {
    float: left;
  }
</style>



<div class="parent">
  <div class="stationscol">
    <h1>Stations</h1>
    <div class="stationslist">
      <% if @stations.present? %>
        <%= render(partial: "stations/row", collection: @stations, as: :station) %>
      <% else %>
      <div class="empty">
        No stations found.
      </div>
      <% end %>
    </div>

  </div>

  <img src="/images/nipmucNotch.PNG", class="map">
  <img src="/images/map_pin.png", class="pin", usemap="#clickmap">
  <img src="/images/map_pin.png", class="pin2", usemap="#clickmap2">
</div>

<map name="clickmap">
  <area shape="rect" coords="0,0,100,100" alt="Cooley Dickinson" href="../stations#index">
</map>

<map name="clickmap2">
  <area shape="rect" coords="0,0,100,100" alt="Florence Bank" href="../rent">
</map>


